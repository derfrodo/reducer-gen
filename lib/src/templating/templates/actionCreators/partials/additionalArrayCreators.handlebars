    // Action Creators for manipulating arrays inside state
{{#each state.properties}}
    {{#if isArray}}
    {{name}}AddItem: (item: {{arrayElementType}}): ReducerActions => ({
        type: actions.{{arrayActionEnumValues.add}},
        next: item,
    }),
    {{name}}UpdateItem: (oldItem: {{arrayElementType}}, nextItem: {{arrayElementType}}): ReducerActions => ({
        type: actions.{{arrayActionEnumValues.update}},
        next: {
            oldItem,
            nextItem,
        }
    }),
    {{name}}RemoveItem: (item: {{arrayElementType}}): ReducerActions => ({
        type: actions.{{arrayActionEnumValues.remove}},
        next: item,
    }),
    {{/if}}
{{/each}}