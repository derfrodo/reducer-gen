export const {{reducerActions.baseReducerTypeguard}} = (
    item: unknown
): item is {{reducerActions.baseReducerActionsName}} => {
    if (!item) {
        return false;
    }
    if (typeof item === "object" && item !== null && "type" in item) {
        const { type } = item;

        return (
            typeof type === "string" &&
            Object.hasOwnProperty.call(actions, type)
        );
    }
    return false;
};

